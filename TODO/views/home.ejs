<!DOCTYPE html>
<html>
    <head></head>
    <body>
        <div class="from_class">
            <form action="/create_todo" method="post">
                <div>
                    <input type="text" name="desc" placeholder="Type your description of TODO" required>
                </div>
                <div class="selecting">
                    <select name="category" required>
                        <option value="" disabled selected>Select your option</option>
                        <option>Personal</option>
                        <option>Work</option>
                        <option>Claeaning</option>
                        <option>Others</option>
                        <option>Collage</option>
                    </select>
                    <input class="datesValues" type="date" name="datesValues" placeholder="Due data dd/mm/yyyy" required>
                </div>
                <button class="buttonDesign colorGrey" id="submitButton" type="submit"><i class="fa fa-plus-square" > </i> Add Task</button>
                <button class="buttonDesign colorRed" id="deleteButton" type="submit"><i class="fa fa-trash-o"></i> Delete Task</button>
            </form>
        </div>
        <!-- For displaying TODO list -->
        <div>
            <% for(let i todolist){let j=0;let newId='descids'+j ; %>
            <div class="singleTask">
                <input type="checkbox" name="delechack" class="delechack" onclick="checkedOrNot()" uid = <%= i._id %> >
                <div class="name_and_dueDate">
                    <p id=<%= i._id %>  uid = <%= i._id %> class="dispdsc"><%= i.desc %></p>
                    <p id=<%= i._id + i.dueDate %> class="dueDate"  ><%= i.dueDate %></p>
                </div>
                <div class="catesec">
                    <%= i.category %>
                </div>
                    <div class="editClass"><a href="/editdata/?id=<%=i._id %>">Edit</a></div>
            </div>
            <% j++;}%>
        </div>

    </body><script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="/js/script.js"></script>
</html>